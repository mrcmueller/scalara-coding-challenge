datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

enum Land {
  Deutschland
  Italien
  Frankreich
}

model Adressen {
  id           String       @id @default(auto()) @map("_id") @db.ObjectId
  strasse      String
  hausnummer   String
  postleitzahl String
  stadt        String
  land         Land       @default(Deutschland)
  Immobilien   Immobilien[]
  Kontakte     Kontakte[]
}

model Immobilien {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  beschreibung String
  adresse      Adressen @relation(fields: [adressenId], references: [id])
  adressenId   String   @db.ObjectId
}

model Kontakte {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  vorname    String
  nachname   String
  adresse    Adressen @relation(fields: [adressenId], references: [id])
  adressenId String   @db.ObjectId
}

model Beziehung {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  immobilie  String   @db.ObjectId
  kontakt    String   @db.ObjectId
  startdatum DateTime
  enddatum   DateTime
}
