datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

enum Land {
  Deutschland
  Italien
  Frankreich
}

model Immobilie {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  beschreibung String
  strasse      String
  hausnummer   String
  postleitzahl String
  stadt        String
  land         Land
  beziehungen Beziehung     
}

model Kontakt {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  strasse      String
  hausnummer   String
  postleitzahl String
  stadt        String
  land         Land     
  beziehungen Beziehung
}

model Beziehung {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  immobilie  Immobilie 
  kontakt    Kontakt   
  beziehungstyp Int
  dienstleistungstyp Int
  startdatum DateTime
  enddatum   DateTime
}
